<section class="section">
  <div class="section__wrapper">
    <h1 class="section__title">
      <%= t('space_booking.general') %>
    </h1>
    <div class="section__content">
      <%= form_for @space_booking, url: booking_save_general_space_path(@space), class: 'form', method: :post do |f| %>
        <div class="form__field">
          <%= f.label :first_name, class: 'label' %>
          <%= f.text_field :first_name, class: 'input' %>
        </div>
        <div class="form__field">
          <%= f.label :last_name, class: 'label' %>
          <%= f.text_field :last_name, class: 'input' %>
        </div>
        <div class="form__field">
          <%= f.label :organisation, class: 'label' %>
          <%= f.text_field :organisation, class: 'input' %>
        </div>
        <div class="form__field">
          <%= f.label :phone, class: 'label' %>
          <%= f.text_field :phone, class: 'input' %>
        </div>
        <div class="form__field">
          <%= f.label :email, class: 'label' %>
          <%= f.text_field :email, class: 'input' %>
        </div>
        <div class="form__field">
          <%= f.label :people_count, class: 'label' %>
          <%= f.text_field :people_count, class: 'input' %>
        </div>
        <div class="form__field">
          <%= f.label :purpose, class: 'label' %>
          <%= f.text_area :purpose, class: 'textarea' %>
        </div>
        <div class="form__action">
          <%= f.submit t('space_booking.pick_terms'), class: 'section__button' %>
        </div>
      <% end %>
    </div>
  </div>
</section>
