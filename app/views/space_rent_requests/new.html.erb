<h1><%= t('space_rent_request.title') %></h1>

<%= form_for @space_rent_request, url: space_rent_requests_space_path(@space), method: :post do |f| %>
	<div class="form__field">
		<%= f.label :first_name, class: 'label' %>
		<%= f.text_field :first_name, class: 'input' %>
	</div>

	<div class="form__field">
		<%= f.label :last_name, class: 'label' %>
		<%= f.text_field :last_name, class: 'input' %>
	</div>

	<div class="form__field">
		<%= f.label :organisation, class: 'label' %>
		<%= f.text_field :organisation, class: 'input' %>
	</div>

	<div class="form__field">
		<%= f.label :phone, class: 'label' %>
		<%= f.text_field :phone, class: 'input' %>
	</div>

	<div class="form__field">
		<%= f.label :email, class: 'label' %>
		<%= f.text_field :email, class: 'input' %>
	</div>

	<div class="form__field">
		<%= f.label :people_count, class: 'label' %>
		<%= f.text_field :people_count, class: 'input' %>
	</div>

	<div class="form__field">
		<%= f.label :work_plan, class: 'label' %>
		<%= f.text_area :work_plan, class: 'input' %>
	</div>

	<div class="form__field">
		<%= f.label :work_goal, class: 'label' %>
		<%= f.text_area :work_goal, class: 'input' %>
	</div>

	<div class="form__field">
		<%= f.label :partners, class: 'label' %>
		<%= f.text_area :partners, class: 'input' %>
	</div>

	<div class="form__field">
		<%= f.label :other, class: 'label' %>
		<%= f.text_area :other, class: 'input' %>
	</div>

    <div>
      <%= f.check_box :consent %>
      <%= f.label :consent do %>
        <%= @app_settings.space_rent_consent.remove_tag("p").html_safe %>
      <% end %>
    </div>

	<div class="form__action">
		<%= f.submit t('space_rent_request.submit'), id: 'submit-button', class: 'btn btn--primary', disabled: f.object.consent != "1" %>
	</div>
<% end %>

<script>
  $('#space_rent_request_consent').on("change", function(){
    if($(this).is(':checked')){
      $('#submit-button').removeAttr("disabled");
    } else {
      $('#submit-button').attr("disabled", "disabled");
    }
  })
</script>
