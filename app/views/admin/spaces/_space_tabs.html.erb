<div class="tabs tabs__wrapper tabs-margin--small">
  <div class="tabs__navigation">
    <%= active_link_to t('admin_nav.unpublished_posts'), admin_unpublished_posts_path, class: 'btn--tabs', active: [['admin/posts'],[]] && params[:filter] == :unpublished, class_active: 'is-active' %>
    <%= active_link_to t('admin_nav.published_posts'), admin_posts_path, class: 'btn--tabs', active: :exact, class_active: 'is-active' %>
    <%= active_link_to t('admin_nav.post_categories'), admin_post_categories_path, class: 'btn--tabs', active: [['admin/post_categories'],[]], class_active: 'is-active' %>
    <%= active_link_to t('admin_nav.post_authors'), admin_post_authors_path, class: 'btn--tabs', active: [['admin/post_authors'],[]], class_active: 'is-active' %>
  </div>
</div>
