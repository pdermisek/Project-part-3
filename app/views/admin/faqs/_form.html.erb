<%= form_for [:admin, @faq], html: {class: 'form grid'} do |f| %>
  <div class="form__field">
    <%= f.label :question, class: "label" %>
    <%= f.text_field :question, class: "input" %>
  </div>

  <div class="form__field">
    <%= f.label :answer, class: "label" %>
    <%= f.text_area :answer, class: "input" %>
  </div>

  <div class="actions">
    <%= f.submit t('save'), class: "btn btn--primary sticky-submit", data: { disable_with: t('please_wait') } %>
  </div>
<% end %>
