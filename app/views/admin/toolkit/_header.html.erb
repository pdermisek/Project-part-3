<!-- ### HEADER ### -->

<section class="section">

  <h2 class="toolkit__headline">Header</h2>

  <section class="subsection">
    <pre><code>
    layout/_header.scss
    </code></pre>
  </section>

</section>

<!-- ##  ## -->

<section class="section">

  <h3 class="toolkit__subheadline">Header primary</h3>

  <section class="subsection relative">
    <code>
      <xmp>
        <header class="header header--double">
          <h1>Title</h1>
          <%%= link_to "New record", new_admin_admin_path, class: "btn btn--primary btn--large" %>
        </header>
      </xmp>
      <%= inline_svg "icons/copy.svg", class:"copy_to_clipboard" %>
    </code>
  </section>

  <div class="wrapper">

    <header class="header header--double">
      <h1>Title</h1>

      <%= link_to "New record", new_admin_admin_path, class: "btn btn--primary btn--large" %>
    </header>

  </div>


  <h3 class="toolkit__subheadline">Header secondary</h3>

  <section class="subsection relative">
    <code>
      <xmp>
        <header class="header header--small">
          <%%= link_to admin_admins_path, class: "btn btn--back" do %>
            <div class="arrow--left"></div>
          <%% end %>
          <div class="header__content">
            <h1>Title</h1>
            <p>Subtitle</p>
          </div>
        </header>
      </xmp>
      <%= inline_svg "icons/copy.svg", class:"copy_to_clipboard" %>
    </code>
  </section>


  <div class="wrapper">
  
    <header class="header header--small">
      <%= link_to admin_admins_path, class: "btn btn--back" do %>
        <div class="arrow--left"></div>
      <% end %>

      <div class="header__content">
        <h1>Title</h1>
        <p>Subtitle</p>
      </div>
    </header>

  </div>


</section>
