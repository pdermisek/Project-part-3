<section class="section">
  <h3 class="toolkit__subheadline">Navigation icons</h3>
  <div class="wrapper">
    <div class="toolkit__icons-wrapper">
      <% @icons_nav.each do |icon| %>
        <%= image_tag "icons/nav/#{icon.split('/').last}", class: 'toolkit__icon' %>
      <% end %>
    </div>
  </div>
</section>

