<%= form_for [:admin, @page_meta_tag], html: {class: 'form grid'} do |f| %>

  <div class="form__field">
    <%= f.label :title, class: "label" %>
    <em><%= t('page_meta_tag.title_desc') %></em>
    <%= f.text_field :title, class: "input js_validate_len-max(20)" %>
  </div>

  <div class="form__field">
    <%= f.label :og_title, class: "label" %>
    <%= f.text_field :og_title, class: "input" %>
  </div>

  <div class="field input__field--text">
    <%= f.label :image, class: "label" %>
    <div class="image_field seo_image">
      <img src="<%= f.object.image_url %>" class= "img_prev" alt='Drop File here or click to upload'>
       <p class="text--center"><%= t('image_upload') %></p>
      <%= f.file_field :image, class: "image_file_field" %>
      <%= f.hidden_field :image_cache %>
    </div>
  </div>

  <div class="form__field">
    <%= f.label :description, class: "label" %>
    <%= f.text_area :description, class: "input js_validate_len-max(150)" %>
  </div>

  <div class="form__field">
    <%= f.label :keywords, class: "label" %>
    <em><%= t('seo_keywords_recommendation') %></em>
    <%= f.text_area :keywords, class: "input js_validate_len-max(150)" %>
  </div>

  <div class="actions">
    <%= f.submit t('save'), class: "btn btn--primary sticky-submit", data: { disable_with: t('please_wait') } %>
  </div>
<% end %>
