<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>

<legend class="legend"><%= t('devise.shared_links.log_in') %></legend>

  <div class="form__field padding--bottom">
    <%= f.label :email, class: "label" %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "input" %>
  </div>

  <div class="form__field padding--bottom">
    <%= f.label :password, class: "label" %>
    <%= f.password_field :password, autocomplete: "off", class: "input" %>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="form__field padding--bottom input__wrapper">
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me, class: "label" %>
    </div>
  <% end -%>

  <div class="form__field padding--bottom">
    <%= f.submit t('devise.shared_links.log_in'), class: "btn btn--primary" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
