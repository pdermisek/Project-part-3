<!-- ### ICONS ### -->

<section class="section">

  <h2 class="toolkit__headline">Icons</h2>

  <section class="subsection">
    <pre><code>
      modules/_icons.scss
      images/icons/*
    </code></pre>
  </section>

</section>

<section class="section">
    <h3 class="toolkit__subheadline">Icons</h3>
    <div class="wrapper">
      <div class="toolkit__icons-wrapper">
        <% @icons.each do |icon| %>
        <%= image_tag "icons/#{icon.split('/').last}", class: 'toolkit__icon' %>
        <% end %>
      </div>
    </div>
</section>

<section class="section">
    <h3 class="toolkit__subheadline">Social icons</h3>
    <div class="wrapper">
      <div class="toolkit__icons-wrapper">
        <% @icons_social.each do |icon| %>
          <%= image_tag "icons/social/#{icon.split('/').last}", class: 'toolkit__icon' %>
        <% end %>
      </div>
    </div>
</section>

