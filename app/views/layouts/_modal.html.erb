<div id="modal" class="modal">
	<div class="modal-content">
		<span class="close">
			<%= inline_svg 'icons/close.svg', class: 'icon--1x' %>
		</span>
		<div id="modal-injected_content"></div>
	</div>
</div>

<script>
	$(".close").click(function() {
		close_modal();
	});
	
	$(document).on('keyup',function(evt) {
	    if (evt.keyCode == 27) {
	  		close_modal();
	    }
	});
</script>
